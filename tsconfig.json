{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "/src",
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitOverride": true,
        "outDir": "pkg",
        "strict": true,
        "target": "esnext",
        "paths": {
            "/src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "web/**/*"
    ]
}
